<?xml version="1.0" encoding="ISO-8859-1"?>
<actions>

	<!-- New -->
	<action id="new.datachooser"
		image="/auxdata/ui/icons/DataChooser16.gif"
		description="Show data source window"
		action="jython:idv.showChooser();"/>
	<action id="new.dataselector"
		image="/edu/wisc/ssec/mcidasv/resources/icons/edit-paste16.png"
		description="New field selector window"
		action="jython:idv.createDataSelector();"/>
	<action id="new.displaywindow"
		image="/edu/wisc/ssec/mcidasv/resources/icons/document-new16.png"
		description="Open new tab"
		action="jython:idv.getIdvUIManager().createNewWindow();"/>
		
	<!-- Edit -->
	<action id="edit.preferences"
		image="/auxdata/ui/icons/EditPreferences16.gif"
		description="Edit user preferences"
		action="jython:idv.showPreferenceManager();"/>
	<action id="edit.displaysettings"
		image="/auxdata/ui/icons/Settings16.png"
		description="Edit display settings"
		action="jython:idv.getIdvUIManager().editDisplaySettings();"/>
	<action id="edit.formula.create"
		image="/auxdata/ui/icons/EditFormulas16.gif"
		description="Create formula"
		action="jython:idv.getJythonManager().showFormulaDialog()"/>
	<action id="edit.formula.import"
		image="/auxdata/ui/icons/EditFormulas16.gif"
		description="Import formula"
		action="jython:idv.getJythonManager().importFormulas()"/>
	<action id="edit.formula.export"
		image="/auxdata/ui/icons/EditFormulas16.gif"
		description="Export formula"
		action="jython:idv.getJythonManager().exportFormulas()"/>
	<action id="edit.jython"
		image="/auxdata/ui/icons/EditJython16.gif"
		description="Edit Jython library"
		action="jython:idv.getJythonManager().showJythonEditor()"/>
	<action id="edit.colortables"
		image="/auxdata/ui/icons/EditColorTables16.gif"
		description="Edit color tables"
		action="jython:idv.showColorTableEditor();"/>
	<action id="edit.removedisplays"
		image="/edu/wisc/ssec/mcidasv/resources/icons/remove-displays16.png"
		description="Remove all layers"
		action="jython:idv.removeAllDisplays();"/>
	<action id="edit.removedata"
		image="/edu/wisc/ssec/mcidasv/resources/icons/edit-cut16.png"
		description="Remove all data sources"
		action="jython:idv.removeAllDataSources();"/>
	<action id="edit.removedisplaysanddata"
		image="/edu/wisc/ssec/mcidasv/resources/icons/edit-cut16.png"
		description="Remove all layers and data"
		action="jython:idv.removeAllDataSources();idv.removeAllDisplays();"/>
		
	<!-- Show -->
	<action id="show.dashboard"
		image="/edu/wisc/ssec/mcidasv/resources/icons/show-dashboard16.png"
		description="Show data selector"
		action="jython:idv.getIdvUIManager().showDashboard();"/>
	<action id="show.displaycontroller"
		image="/edu/wisc/ssec/mcidasv/resources/icons/show-dashboard16.png"
		description="Show display controller"
		action="jython:idv.getIdvUIManager().showDashboard();"/>
	<action id="show.dataselector"
		image="/edu/wisc/ssec/mcidasv/resources/icons/edit-paste16.png"
		description="Show field selector window"
		action="jython:idv.getIdvUIManager().showOrCreateDataSelector();"/>
	<action id="show.previoustab"
		image="/edu/wisc/ssec/mcidasv/resources/icons/show-dashboard16.png"
		description="Show data selector"
		action="jython:idv.getIdvUIManager().showDashboard();"/>
	<action id="show.nexttab"
		image="/edu/wisc/ssec/mcidasv/resources/icons/show-dashboard16.png"
		description="Show data selector"
		action="jython:idv.getIdvUIManager().showDashboard();"/>
		
	<!-- Display -->
	<action id="display.curvedrawer"
		image="/edu/wisc/ssec/mcidasv/resources/icons/drawing-control16.png"
		description="Create Drawing Control"
		action="jython:idv.doMakeControl('curvecontrol')"/>
	<action id="display.locationindicator"
		image="/edu/wisc/ssec/mcidasv/resources/icons/location-indicator16.png"
		description="Create Location Indicator"
		action="jython:idv.doMakeControl('locationindicatorcontrol')"/>
	<action id="display.backgroundimage"
		image="/edu/wisc/ssec/mcidasv/resources/icons/background-image16.png"
		description="Create Background Image"
		action="jython:idv.doMakeBackgroundImage()"/>
	<action id="display.textnote"
		image="/auxdata/ui/icons/Text16.gif"
		description="Create Text Note"
		action="jython:idv.doMakeControl('notecontrol')"/>
	<action id="display.rangeandbearing"
		image="/edu/wisc/ssec/mcidasv/resources/icons/range-bearing16.png"
		description="Create Range and Bearing"
		action="jython:idv.doMakeControl('rangeandbearing')"/>
	<action id="display.imagemovie"
		image="/edu/wisc/ssec/mcidasv/resources/icons/video-x-generic16.png"
		description="Create Image Movie Display"
		action="jython:idv.doMakeControl('imagemoviecontrol')"/>
	
	<!-- Bundle -->
	<action id="bundle.open"
		image="/edu/wisc/ssec/mcidasv/resources/icons/document-open16.png"
		description="Open bundle"
		action="jython:idv.doOpen();"/>
	<action
		id="bundle.save"
		image="/edu/wisc/ssec/mcidasv/resources/icons/document-save16.png"
		description="Save bundle"
		action="jython:idv.doSaveAs();"/>
	<action id="bundle.default.save"
		image="/auxdata/ui/icons/SaveAll16.gif"
		description="Save as default"
		action="jython:idv.doSaveAsDefault();"/>
	<action id="bundle.default.open"
		image="/auxdata/ui/icons/Refresh16.gif"
		description="Reload default bundle"
		action="jython:idv.doOpenDefault();"/>
	<action id="bundle.default.remove"
		description="Delete default bundle"
		action="jython:idv.doClearDefaults();"/>
	<action id="bundle.favorite.save"
		image="/edu/wisc/ssec/mcidasv/resources/icons/fave-bundle16.png"
		description="Save as favorite bundle"
		action="jython:idv.getPersistenceManager().doSaveAsFavorite();"/>
	<action id="bundle.favorite.manage"
		image="/edu/wisc/ssec/mcidasv/resources/icons/manage-faves16.png"
		description="Manage favorites"
		action="jython:idv.getIdvUIManager().showBundleDialog();"/>
	
	<!-- Plugins -->
	<action id="plugins.install.file"
		image="/auxdata/ui/icons/Open16.gif"
		description="Install a plugin from a file"
		action="jython:idv.getPluginManager().installPluginFromFile();"/>
	<action id="plugins.install.url"
		image="/auxdata/ui/icons/Open16.gif"
		description="Install a plugin from a url"
		action="jython:idv.getPluginManager().installPluginFromUrl();"/>
	<action id="plugins.manage"
		image="/auxdata/ui/icons/Open16.gif"
		description="List plugins"
		action="jython:idv.getPluginManager().showPluginList();"/>
	<action id="plugins.create"
		image="/auxdata/ui/icons/New16.gif"
		description="Create plugin"
		action="jython:idv.getPluginManager().showCreatePlugin();"/>
		
	<!-- View -->
	<action id="view.reloadalldata"
		image="/edu/wisc/ssec/mcidasv/resources/icons/view-refresh16.png"
		description="Reload all data sources"
		action="jython:idv.reloadAllDataSources();"/>
		
	<!-- Help -->
	<action id="help.introduction"
		image="/edu/wisc/ssec/mcidasv/resources/icons/show-help16.png"
		description="Show help"
		action="help:idv.introduction"/>
	<action id="help.showhelptips"
		description="Show Help Tips"
		image="/edu/wisc/ssec/mcidasv/resources/icons/show-tips16.png"
		action="jython:idv.getIdvUIManager().showHelpTips();"/>
	<action id="help.showsupportform"
		image="/edu/wisc/ssec/mcidasv/resources/icons/support-request16.png"
		description="Submit support request"
		action="jython:idv.getIdvUIManager().showSupportForm();"/>
	<action id="help.showabout"
		image="/edu/wisc/ssec/mcidasv/resources/icons/weather-clear16.png"
		description="About..."
		action="jython:idv.getIdvUIManager().about();"/>
		
	<!-- Other -->
	<action id="exit"
		image="/edu/wisc/ssec/mcidasv/resources/icons/exit16.png"
		description="Exit"
		action="jython:idv.quit();"/>
	<action id="idv.stopload"
		image="/edu/wisc/ssec/mcidasv/resources/icons/stop-loads16.png"
		description="Stop current loads"
		action="jython:idv.waitLabelClicked();"/>
	<action id="jython.shell"
		image="/auxdata/ui/icons/EditFormulas16.gif"
		description="Show Jython Shell"
		action="jython:idv.getJythonManager().createShell()"/>
	<action id="ui.closewindow"
		description="Close Window"
		action="jython:idv.closeCurrentWindow();"/>
		
</actions>
