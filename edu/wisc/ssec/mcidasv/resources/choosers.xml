<?xml version="1.0" encoding="UTF-8"?>


<choosers>

	<!--                       -->
	<!--     IMAGERY           -->
	<!--                       -->

	<panel layout="border" style="toplabel"
		category="Satellite Imagery"
		categorycomponent="true">
		<html text="Displays imagery data from ADDE servers.
			&quot;New&quot; is the chooser developed for Alpha10,
			&quot;Alpha9&quot; is the chooser from previous versions." />		
	</panel>
	
	<panel title="New"
    	category="Satellite Imagery"
		layout="border">
		<chooser id="chooser.testimage" 
 			title="New Imagery"
			menutitle="Satellite Imagery (New)"
 			helppath="idv.data.choosers.imagechooser"
			howdetails="true"
			includeNavComp="true"
			class="edu.wisc.ssec.mcidasv.chooser.TestAddeImageChooser" />
	</panel>
	
	<panel title="Alpha9"
		category="Satellite Imagery" 
		layout="border"
		tabtooltip="For accessing satellite imagery" 
		mnemonic="I">
		<chooser id="chooser.image" 
			title="Alpha9 Imagery"
			menutitle="Satellite Imagery (Alpha9)"
			helppath="idv.data.choosers.imagechooser"
			howdetails="true"
			includeNavComp="true"
			class="ucar.unidata.idv.chooser.adde.AddeImageChooser" />
	</panel>




	<!--                       -->
	<!--     RADAR             -->
	<!--                       -->
	<panel layout="border" style="toplabel" 
		category="Radar Imagery"
		categorycomponent="true">
		<html text="Displays Level II and Level III radar data from available 
	             stations across the United States." />
	</panel>

	<panel layout="border" 
		category="Radar Imagery&gt;Level II"
		categorycomponent="true">
		<html text="Select remote data if you are accessing data on a remote machine, 
	             local if you are accessing data on your local workstation." />
	</panel>

<!-- Replaced with TDS chooser below
	<panel title="Remote" 
