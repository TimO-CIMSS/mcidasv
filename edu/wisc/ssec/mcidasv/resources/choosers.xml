<choosers>

	<!--                       -->
	<!--     IMAGERY           -->
	<!--                       -->

	<panel layout="border" style="toplabel"
		category="Satellite Imagery"
		categorycomponent="true">
		<html text="
			&lt;b&gt;Display Imagery data from local or remote sources&lt;/b&gt;
			&lt;br&gt;
			&lt;ul&gt;
			&lt;li&gt;
			Select &lt;b&gt;New&lt;/b&gt; to access data via ADDE (chooser developed for Alpha10)
			&lt;li&gt;
			Select &lt;b&gt;Original&lt;/b&gt; to access data via ADDE (original chooser)
			&lt;/ul&gt;
		" />		
	</panel>
	
	<panel title="New"
    	category="Satellite Imagery"
		layout="border"
		tabtooltip="For accessing satellite imagery">
		<chooser id="chooser.testimage" 
 			title="New Imagery"
			menutitle="Satellite Imagery (New)"
 			helppath="idv.data.choosers.imagechooser"
			howdetails="true"
			includeNavComp="true"
			class="edu.wisc.ssec.mcidasv.chooser.TestAddeImageChooser" />
	</panel>
	
	<panel title="Original"
		category="Satellite Imagery" 
		layout="border"
		tabtooltip="For accessing satellite imagery" 
		mnemonic="I">
		<chooser id="chooser.image" 
			title="IDV Imagery"
			menutitle="Satellite Imagery (From IDV)"
			helppath="idv.data.choosers.imagechooser"
			howdetails="true"
			includeNavComp="true"
			class="ucar.unidata.idv.chooser.adde.AddeImageChooser" />
	</panel>
	
	<panel title="Test"
		category="Satellite Imagery"
        layout="border"
        tabtooltip="For accessing satellite imagery">
        <chooser id="chooser.test2image" 
             title="Test Imagery"
             menutitle="Satellite Imagery (Test)"
             helppath="idv.data.choosers.imagechooser"
             howdetails="true"
             includeNavComp="true"
             class="edu.wisc.ssec.mcidasv.chooser.Test2AddeImageChooser" />
	</panel>
	




	<!--                       -->
	<!--     RADAR             -->
	<!--                       -->
	<panel layout="border" style="toplabel" 
		category="Radar Imagery"
		categorycomponent="true">
		<html text="
			&lt;b&gt;Display Radar data from stations across the United States&lt;/b&gt;
			&lt;br&gt;
			&lt;ul&gt;
			&lt;li&gt;
			&lt;b&gt;Level II&lt;/b&gt; data can be local or remote
			&lt;li&gt;
			Select &lt;b&gt;Level III&lt;/b&gt; to access data via ADDE
			&lt;/ul&gt;
		" />
	</panel>

	<panel layout="border" 
		category="Radar Imagery&gt;Level II"
		categorycomponent="true">
		<html text="
			&lt;b&gt;Display Level II Radar data from stations across the United States&lt;/b&gt;
			&lt;br&gt;
			&lt;ul&gt;
			&lt;li&gt;
			Select &lt;b&gt;Local&lt;/b&gt; to access local data via a file browser
			&lt;li&gt;
			Select &lt;b&gt;Remote&lt;/b&gt; to access remote data via a THREDDS catalog
			&lt;/ul&gt;
		" />
	</panel>
		
	<panel title="Local" 
		layout="border"
		category="Radar Imagery&gt;Level II" 
		tabtooltip="Level II Local">
		<chooser id="chooser.radar.level2" 
			title="Local"
			menutitle="Level II Radar-Local" 
			helppath="idv.data.choosers.level2chooser"
			xxx.idv.chooser.projection.bounds="50,-100,50,20"
			xxx.idv.chooser.maps="semi-colon delimited list of maps, e.g., /auxdata/maps/OUTLUSAM"
			class="ucar.unidata.idv.chooser.Level2RadarChooser"
			showdatasourcemenu="false" />
	</panel>
			
	<panel title="Remote"
		layout="border"
		category="Radar Imagery&gt;Level II"
		tabtooltip="Level II Remote">
		<chooser id="chooser.tdsradar"
			title="Remote"
			menutitle="Level II Radar-Remote"
			helppath="idv.data.choosers.radarchooser"
			class="edu.wisc.ssec.mcidasv.chooser.TDSRadarChooser"/>
	</panel>

	<panel title="Level III" 
		category="Radar Imagery" 
		layout="border"
		tabtooltip="Level-III radar data">
		<chooser id="chooser.radar.level3" 
			title="Level III"
			menutitle="Level III Radar" 
			helppath="idv.data.choosers.radarchooser"
			showdetails="true"
			class="edu.wisc.ssec.mcidasv.chooser.adde.AddeRadarChooser" />
	</panel>









