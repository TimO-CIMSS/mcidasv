		layout="border" tabtooltip="Level-II Remote">
		<chooser id="chooser.dqcradar" title="Remote (Experimental)"
			menutitle="DQC Radar" helppath="idv.data.choosers.radarchooser"
			class="ucar.unidata.idv.chooser.DqcRadarChooser" />
	</panel>
-->
	
	<panel title="Remote"
		layout="border"
		category="Radar Imagery&gt;Level II"
		tabtooltip="Level II Remote">
		<chooser id="chooser.tdsradar"
			title="Remote"
			menutitle="Level II Radar-Remote"
			helppath="idv.data.choosers.radarchooser"
			class="ucar.unidata.idv.chooser.TDSRadarChooser"/>
	</panel>
	
	<panel title="Local" 
		layout="border"
		category="Radar Imagery&gt;Level II" 
		tabtooltip="Level II Local">
		<chooser id="chooser.radar.level2" 
			title="Local"
			menutitle="Level II Radar-Local" 
			helppath="idv.data.choosers.level2chooser"
			xxx.idv.chooser.projection.bounds="50,-100,50,20"
			xxx.idv.chooser.maps="semi-colon delimited list of maps, e.g., /auxdata/maps/OUTLUSAM"
			class="ucar.unidata.idv.chooser.Level2RadarChooser"
			showdatasourcemenu="false" />
	</panel>

	<panel title="Level III" 
		category="Radar Imagery" 
		layout="border"
		tabtooltip="Level-III radar data">
		<chooser id="chooser.radar.level3" 
			title="Level III"
			menutitle="Level III Radar" 
			helppath="idv.data.choosers.radarchooser"
			showdetails="true"
			class="ucar.unidata.idv.chooser.adde.AddeRadarChooser" />
	</panel>









	<!--                       -->
	<!--     OBSERVATIONS      -->
	<!--                       -->

	<panel layout="border" 
		category="Point Observations"
		categorycomponent="true">
		<html text="Displays Surface, Upper Air, and Wind Profiler data from available
			    stations around the world." />
	</panel>

	<panel layout="border" 
		category="Point Observations&gt;Upper Air"
		categorycomponent="true">
		<html text="Select plot to plot individual data points, and Soundings to view 
	            Skew-T, Stuve, or Emagram thermodynamic diagrams." />
	</panel>

	<panel layout="border"
		category="Point Observations&gt;Upper Air&gt;Soundings"
		categorycomponent="true">
		<html text="Select remote data if you are accessing data on a remote machine, 
	             local if you are accessing data on your local workstation." />
	</panel>

	<panel title="Surface Plot" 
		category="Point Observations"
		layout="border" 
		tabtooltip="Point - Surface">
		<chooser id="chooser.point" 
			title="Surface"
			menutitle="Surface Observations"
			helppath="idv.data.choosers.pointchooser"
			class="edu.wisc.ssec.mcidasv.chooser.AddePointDataChooser" />
	</panel>

	<panel title="Plot" 
		category="Point Observations&gt;Upper Air"
		layout="border" 
		tabtooltip="Point - Upper Air">
		<chooser id="chooser.raob.singlelevel" 
			title="Plot"
			menutitle="Upper Air Observations"
			helppath="idv.data.choosers.raobchooser"
			class="edu.wisc.ssec.mcidasv.chooser.AddeRaobPointDataChooser"
			showserver="true" />
	</panel>

	<panel title="Remote"
		category="Point Observations&gt;Upper Air&gt;Soundings"
		layout="border" 
		tabtooltip="RAOB Soundings - Remote">
		<chooser id="chooser.raob.remote" 
			title="Remote"
			menutitle="Sounding Data-Remote"
			helppath="idv.data.choosers.raobchooser"
			class="edu.wisc.ssec.mcidasv.chooser.RaobChooser" 
			showserver="true" />
	</panel>

	<panel title="Local"
		category="Point Observations&gt;Upper Air&gt;Soundings"
		layout="border" 
		tabtooltip="RAOB Soundings - Local">
		<chooser id="chooser.raob.file" 
			title="Local"
			menutitle="Sounding Data-Local"
			helppath="idv.data.choosers.raobchooser"
			class="edu.wisc.ssec.mcidasv.chooser.RaobChooser" 
			showserver="false" />
	</panel>

	<panel title="Wind Profiler" 
		category="Point Observations"
		layout="border" 
		tabtooltip="For accessing profiler data"
		mnemonic="O">
		<chooser id="chooser.profiler" 
			title="Profiler Winds"
			menutitle="Profiler Winds"
			helppath="idv.data.choosers.profilerchooser"
			class="ucar.unidata.idv.chooser.adde.AddeProfilerDataChooser" />
	</panel>






	<!--                       -->
	<!--     FRONTS            -->
	<!--                       -->
	<panel title="Front Positions" 
		layout="border"
		tabtooltip="For accessing ADDE front products" 
		mnemonic="O">
		<chooser id="chooser.fronts" 
			title="Fronts" 
			menutitle="Fronts"
			helppath="idv.data.choosers.frontchooser"
			class="ucar.unidata.idv.chooser.adde.AddeFrontChooser" />
	</panel>









	<!--                  -->
	<!--    GENERAL       -->
	<!--                  -->

	<panel layout="border" 
		category="General"
		categorycomponent="true">
		<html text="Select Catalogs to display model data, road and hydrography 
	 		data from Tiger shapefiles, National Weather Service warnings from
	 		shapefiles, and maps from available web map servers.  Select Directory
	 		to activate automatic polling of local directories for file updates, 
	 		Files to load a local data file, and URLs to load data from a URL." />
	</panel>

	<panel title="Catalogs" 
		category="General" layout="border"
		tabTooltip="For accessing remote gridded data" 
		mnemonic="C">
		<chooser id="chooser.xml" 
			title="Catalogs"
			menutitle="From a Catalog"
			helppath="idv.data.choosers.catalogchooser"
			class="ucar.unidata.idv.chooser.XmlChooser" />
	</panel>

	<chooser id="chooser.polling.dir" 
		title="Directory"
		category="General" 
		showinmenu="true"
		helppath="idv.data.choosers.directorychooser"
		class="ucar.unidata.idv.chooser.PollingFileChooser" 
		filecount="1" />

	<chooser id="chooser.file" 
		title="Files" 
		category="General"
		menutitle="From the File System" 
		showinmenu="true"
		helppath="idv.data.choosers.filechooser"
		class="ucar.unidata.idv.chooser.FileChooser" 
		showpolling="false"
		filepattern=".*\.nc"
		filters=".*\.xidv$,.*\.zidv$:IDV Bundles (*.xidv,*.zidv);.*\.mcv$,.*\.mcvz$:McIDAS-V Bundles (*.mcv,*.mcvz);" />
	<panel title="URLs" 
		category="General" layout="border"
		tabTooltip="For accessing URLs" 
		mnemonic="U">
		<chooser id="chooser.url" 
			title="URLS"
			menutitle="From a Web Server" 
			helppath="idv.data.choosers.urlchooser"
			class="ucar.unidata.idv.chooser.UrlChooser" 
			anchor="nw" />
	</panel>



	<panel title="McIDAS-X Bridge" 
		layout="border"
		tabTooltip="For importing McIDAS-X frames" 
		mnemonic="C">
		<chooser id="chooser.mcidasx" 
			title="McIDAS-X"
			menutitle="From McIDAS-X" 
			showinmenu="true"
			helppath="idv.data.choosers.bridgechooser"
			class="edu.wisc.ssec.mcidasv.chooser.McIdasBridgeChooser"
			showpolling="false" />
	</panel>




